{
  "name": "@ricado/version-file",
  "version": "1.3.1",
  "description": "Generates a verson file with your apps name, version and build date",
  "repository": {
    "url": "https://github.com/ricado-group/js-version-file.git"
  },
  "main": "lib-commonjs/index.js",
  "module": "lib/index.js",
  "typings": "dist/version-file.d.ts",
  "scripts": {
    "build": "heft test --clean",
    "test": "heft test --watch",
    "docs": "api-documenter generate --input-folder ./temp/api --output-folder ./docs"
  },
  "keywords": [
    "version",
    "file",
    "build",
    "date"
  ],
  "license": "MIT",
  "bin": {
    "generate-version": "./bin/cli.js"
  },
  "dependencies": {
    "@rushstack/node-core-library": "^3.43.0",
    "chalk": "^4.1.2",
    "ejs": "^3.1.6",
    "meow": "^10.1.1"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^7.13.65",
    "@rushstack/eslint-config": "^2.4.4",
    "@rushstack/heft": "^0.42.0",
    "@rushstack/heft-web-rig": "^0.4.29",
    "@types/ejs": "^3.1.0",
    "@types/heft-jest": "^1.0.2",
    "@types/node": "^17.0.7",
    "@types/webpack": "^5.28.0"
  }
}
